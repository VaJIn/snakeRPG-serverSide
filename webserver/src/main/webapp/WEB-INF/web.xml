<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <listener>
        <listener-class>fr.vajin.snakerpg.ShutDownContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.MainPageServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>PlayerProfileServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.PlayerProfileServlet</servlet-class>
    </servlet>


    <servlet>
        <servlet-name>LeaderBoardServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.LeaderBoardServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>GameViewServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.GameViewServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.RegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DataUserServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.data.DataUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataGameServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.data.DataGameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataGameParticipationServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.data.DataGameParticipationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataSnakeServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.data.DataSnakeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataUserGamesServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.data.DataUserGamesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataLeaderBoardServlet</servlet-name>
        <servlet-class>fr.vajin.snakerpg.servlet.data.DataLeaderBoardServlet</servlet-class>
    </servlet>


    <servlet-mapping>
        <servlet-name>PlayerProfileServlet</servlet-name>
        <url-pattern>/player</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LeaderBoardServlet</servlet-name>
        <url-pattern>/leaderboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameViewServlet</servlet-name>
        <url-pattern>/game/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataUserServlet</servlet-name>
        <url-pattern>/data/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataGameServlet</servlet-name>
        <url-pattern>/data/game</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataGameParticipationServlet</servlet-name>
        <url-pattern>/data/gameparticipation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataSnakeServlet</servlet-name>
        <url-pattern>/data/snake</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataUserGamesServlet</servlet-name>
        <url-pattern>/data/usergames</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataLeaderBoardServlet</servlet-name>
        <url-pattern>/data/leaderboard</url-pattern>
    </servlet-mapping>
</web-app>